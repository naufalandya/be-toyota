
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        
model users {
  id          Int    @id @default(autoincrement())
  nama        String?
  nik         String @unique
  email       String    @unique
  password    String?
  jabatan     String?
  role        String?
  supervisor  String?
  avatar_link String?
  insentives  insentive[]

  created_at DateTime @default(now())
}

model insentive {
  id               String   @id @default(cuid())
  nik              String @unique
  nama             String?
  jabatan          String?
  periode_awal     DateTime?
  periode_akhir    DateTime?
  customer         String?
  t_do_dms         DateTime?
  t_lunas_ar       DateTime?
  nama_unit        String?
  poin             Int?
  nilai_per_poin   Float?
  jumlah_insentif  Float?
  contest_insentif Float?
  sbi_insentif     Float?
  status           String?
  user_profile_id  Int
  user_profile     users? @relation(fields: [user_profile_id], references: [id])
    created_at DateTime @default(now())
}